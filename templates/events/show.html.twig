{% extends 'base.html.twig' %}

{% block title %}Events{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center py-12">
        <div class="w-full max-w-2xl bg-white p-6 rounded-lg shadow">
            <h1 class="text-2xl font-semibold mb-6 text-center">Détails de l'événement</h1>

            <div class="grid gap-6">
                <div class="flex flex-col md:flex-row items-start gap-6">
                    <div class="w-full md:w-1/3">
                        {% if event.image %}
                            <img src="{{ asset('uploads/images/' ~ event.image) }}" alt="{{ event.titre }}" class="rounded-lg object-cover w-full h-48 md:h-56" />
                        {% else %}
                            <div class="bg-gray-100 rounded-lg w-full h-48 md:h-56 flex items-center justify-center text-gray-400">Pas d'image</div>
                        {% endif %}
                    </div>

                    <div class="flex-1">
                        <h2 class="text-2xl font-semibold text-gray-900">{{ event.titre }}</h2>
                        <div class="mt-3 flex flex-wrap gap-2 text-sm text-gray-600">
                            <span class="px-2 py-1 bg-gray-100 rounded">{{ event.date ? event.date|date('Y-m-d') : 'Date non définie' }}</span>
                            {% if event.lieu %}<span class="px-2 py-1 bg-gray-100 rounded">{{ event.lieu }}</span>{% endif %}
                        </div>

                        <p class="mt-4 text-gray-700">{{ event.description }}</p>
                    </div>
                </div>
            <div class="mt-6 flex justify-center gap-4">
                <a href="{{ path('app_events_edit', {'id': event.id}) }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700">Modifier</a>
                {# bouton pour s'inscrire à l'évenement #}
                <a href="{{ path('app_inscription_new', {'eventId': event.id}) }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700">Inscription</a>
                {{ include('events/_delete_form.html.twig') }}
                <a href="{{ path('app_events_index') }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-black hover:bg-gray-700">Retour</a>
            </div>
        </div>
    </div>
{% endblock %}
