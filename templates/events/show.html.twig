{% extends 'base.html.twig' %}

{% block title %}Events{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center py-12">
        <div class="w-full max-w-2xl bg-white p-6 rounded-lg shadow">
            <h1 class="text-2xl font-semibold mb-6 text-center">Détails de l'événement</h1>

            <table class="w-full table-auto">
                <tbody class="divide-y">
                    <tr class="py-2">
                        <th class="text-left w-1/3 font-medium text-gray-700 py-2">Id</th>
                        <td class="py-2 text-gray-900">{{ event.id }}</td>
                    </tr>
                    <tr>
                        <th class="text-left font-medium text-gray-700 py-2">Titre</th>
                        <td class="py-2 text-gray-900">{{ event.titre }}</td>
                    </tr>
                    <tr>
                        <th class="text-left font-medium text-gray-700 py-2">Description</th>
                        <td class="py-2 text-gray-900">{{ event.description }}</td>
                    </tr>
                    <tr>
                        <th class="text-left font-medium text-gray-700 py-2">Date</th>
                        <td class="py-2 text-gray-900">{{ event.date ? event.date|date('Y-m-d') : '' }}</td>
                    </tr>
                    <tr>
                        <th class="text-left font-medium text-gray-700 py-2">Lieu</th>
                        <td class="py-2 text-gray-900">{{ event.lieu }}</td>
                    </tr>
                    <tr>
                        <th class="text-left font-medium text-gray-700 py-2">Image</th>
                        <td class="py-2 text-gray-900">{{ event.image }}</td>
                    </tr>
                </tbody>
            </table>

            <div class="mt-6 flex justify-center gap-4">
                <a href="{{ path('app_events_edit', {'id': event.id}) }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700">Modifier</a>
                {# bouton pour s'inscrire à l'évenement #}
                <a href="{{ path('app_inscription_new', {'id': event.id}) }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700">Inscription</a>
                
                {{ include('events/_delete_form.html.twig') }}
                <a href="{{ path('app_events_index') }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-black hover:bg-gray-700">Retour</a>
            </div>
        </div>
    </div>
{% endblock %}
